<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="expoforce">
        <createTable tableName="EVENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EVENT"/>
            </column>
            <column name="EV_TYPE" type="VARCHAR(255)"/>
            <column name="EV_DATE" type="DATETIME"/>
            <column name="SOURCE_ID" type="UUID"/>
            <column name="CLIENT_ID" type="UUID"/>
            <column name="PRODUCT_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="expoforce">
        <createIndex indexName="IDX_EVENT_CLIENT" tableName="EVENT">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="EVENT" constraintName="FK_EVENT_ON_CLIENT"
                                 referencedColumnNames="ID" referencedTableName="CLIENT"/>
    </changeSet>
    <changeSet id="3" author="expoforce">
        <createIndex indexName="IDX_EVENT_PRODUCT" tableName="EVENT">
            <column name="PRODUCT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PRODUCT_ID" baseTableName="EVENT" constraintName="FK_EVENT_ON_PRODUCT"
                                 referencedColumnNames="ID" referencedTableName="PRODUCT"/>
    </changeSet>
    <changeSet id="4" author="expoforce">
        <createIndex indexName="IDX_EVENT_SOURCE" tableName="EVENT">
            <column name="SOURCE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="SOURCE_ID" baseTableName="EVENT" constraintName="FK_EVENT_ON_SOURCE"
                                 referencedColumnNames="ID" referencedTableName="SOURCE"/>
    </changeSet>
</databaseChangeLog>