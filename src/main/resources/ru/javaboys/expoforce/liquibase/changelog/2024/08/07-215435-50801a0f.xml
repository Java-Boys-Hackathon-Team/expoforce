<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="expoforce">
        <createTable tableName="ADVERTISING_CAMPAIGN_RUN">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADVERTISING_CAMPAIGN_RUN"/>
            </column>
            <column name="CAMPAIGN_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="expoforce">
        <createTable tableName="ADVERTISING_CAMPAIGN_RUN_CLIENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADVERTISING_CAMPAIGN_RUN_CLIENT"/>
            </column>
            <column name="CLIENT_ID" type="UUID"/>
            <column name="STATUS" type="VARCHAR(255)"/>
            <column name="ADVERTISING_CAMPAIGN_RUN_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="expoforce">
        <createIndex indexName="IDX_ADVERTISING_CAMPAIGN_RUN_CAMPAIGN" tableName="ADVERTISING_CAMPAIGN_RUN">
            <column name="CAMPAIGN_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CAMPAIGN_ID" baseTableName="ADVERTISING_CAMPAIGN_RUN"
                                 constraintName="FK_ADVERTISING_CAMPAIGN_RUN_ON_CAMPAIGN" referencedColumnNames="ID"
                                 referencedTableName="ADVERTISING_CAMPAIGN"/>
    </changeSet>
    <changeSet id="4" author="expoforce">
        <createIndex indexName="IDX_ADVERTISING_CAMPAIGN_RUN_CLIENT_ADVERTISING_CAMPAIGN_RUN"
                     tableName="ADVERTISING_CAMPAIGN_RUN_CLIENT">
            <column name="ADVERTISING_CAMPAIGN_RUN_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ADVERTISING_CAMPAIGN_RUN_ID"
                                 baseTableName="ADVERTISING_CAMPAIGN_RUN_CLIENT"
                                 constraintName="FK_ADVERTISING_CAMPAIGN_RUN_CLIENT_ON_ADVERTISING_CAMPAIGN_RUN"
                                 onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="ADVERTISING_CAMPAIGN_RUN"/>
    </changeSet>
    <changeSet id="5" author="expoforce">
        <createIndex indexName="IDX_ADVERTISING_CAMPAIGN_RUN_CLIENT_CLIENT" tableName="ADVERTISING_CAMPAIGN_RUN_CLIENT">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="ADVERTISING_CAMPAIGN_RUN_CLIENT"
                                 constraintName="FK_ADVERTISING_CAMPAIGN_RUN_CLIENT_ON_CLIENT"
                                 referencedColumnNames="ID" referencedTableName="CLIENT"/>
    </changeSet>
    <changeSet id="6" author="expoforce">
        <sql>
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>
</databaseChangeLog>