<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://advertisingCampaignListView.title"
      focusComponent="advertisingCampaignsDataGrid">
    <data>
        <collection id="advertisingCampaignsDc"
                    class="ru.javaboys.expoforce.entity.AdvertisingCampaign">
            <fetchPlan extends="_base">
                <property name="filters" fetch="BATCH" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="advertisingCampaignsDl" readOnly="true">
                <query>
                    <![CDATA[select e from AdvertisingCampaign e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="advertisingCampaignsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="advertisingCampaignsDataGrid.create"/>
            <button id="editBtn" action="advertisingCampaignsDataGrid.edit"/>
            <button id="removeBtn" action="advertisingCampaignsDataGrid.remove"/>
            <button id="runBtn" action="advertisingCampaignsDataGrid.runExecute"/>
            <simplePagination id="pagination" dataLoader="advertisingCampaignsDl"/>
        </hbox>
        <dataGrid id="advertisingCampaignsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="advertisingCampaignsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
                <action id="runExecute" text="Создать рекламную компанию"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="description"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
