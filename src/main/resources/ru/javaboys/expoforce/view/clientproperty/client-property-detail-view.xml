<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://clientPropertyDetailView.title"
      focusComponent="form">
    <data>
        <instance id="clientPropertyDc"
                  class="ru.javaboys.expoforce.entity.ClientProperty">
            <fetchPlan extends="_base">
                <property name="client" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="clientPropertyDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="clientPropertyDc">
            <entityPicker id="clientField" property="client">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="paramField" height="9.5em" property="param"/>
            <textArea id="valField" height="9.5em" property="val"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
