<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://productPropertyDetailView.title"
      focusComponent="form">
    <data>
        <instance id="productPropertyDc"
                  class="ru.javaboys.expoforce.entity.ProductProperty">
            <fetchPlan extends="_base">
                <property name="product" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="productPropertyDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="productPropertyDc">
            <textArea id="paramField" height="9.5em" property="param"/>
            <textArea id="valField" height="9.5em" property="val"/>
            <entityPicker id="productField" property="product">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
