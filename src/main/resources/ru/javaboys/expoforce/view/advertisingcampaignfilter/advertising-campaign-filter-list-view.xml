<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://advertisingCampaignFilterListView.title"
      focusComponent="advertisingCampaignFiltersDataGrid">
    <data>
        <collection id="advertisingCampaignFiltersDc"
                    class="ru.javaboys.expoforce.entity.AdvertisingCampaignFilter">
            <fetchPlan extends="_base"/>
            <loader id="advertisingCampaignFiltersDl" readOnly="true">
                <query>
                    <![CDATA[select e from AdvertisingCampaignFilter e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="advertisingCampaignFiltersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="advertisingCampaignFiltersDataGrid.create"/>
            <button id="editBtn" action="advertisingCampaignFiltersDataGrid.edit"/>
            <button id="removeBtn" action="advertisingCampaignFiltersDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="advertisingCampaignFiltersDl"/>
        </hbox>
        <dataGrid id="advertisingCampaignFiltersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="advertisingCampaignFiltersDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="field"/>
                <column property="condition"/>
                <column property="value1"/>
                <column property="value2"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
